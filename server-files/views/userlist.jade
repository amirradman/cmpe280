doctype html
html
  head
    title User List Page
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    <link href="https://fonts.googleapis.com/css?family=Faster+One" rel="stylesheet">
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    style.
      .modal-header, h4, .close {
      background-color: #99ccff;
      color:white !important;
      text-align: center;
      font-size: 50px;
      font-family: 'Faster One', cursive;
      }
      .modal-footer {
      background-color: #f9f9f9;
      }
      td{
      word-wrap: break-word;
      text-align: center;
      }
      table{
      table-layout: auto;
      width: 100%;
      }
      tr:hover{
      background-color: #c5c8cc;
      cursor: pointer;
      }
      th{
      text-align: center;
      background-color: green;
      color: white;
      }
      .modal-dialog{
      width: 50%;
      }
      body{
      background: url('/images/lrbg.jpg');
      background-size: cover;
      }
  body
    .container
      // Modal
      #myModal.modal.fade(role='dialog', data-backdrop="static" ,data-keyboard="false")
        .modal-dialog
          // Modal content
          .modal-content
            .modal-header(style='padding:35px 50px;')
              h4
                |  Current Users
            .modal-body
              table(border=1)
                tr
                  th Username
                  th Firstname
                  th Lastname
                  th Password
                  th Skills
                each user in userlist
                  tr 
                    td #{user.username}
                    td #{user.firstname}
                    td #{user.lastname}
                    td #{user.password}
                    td #{user.skill}
              br
              form(action="deleteuser" method="post")
                .form-group
                input.form-control(type='text', name='rmuser', placeholder='Enter a username')
                br
                button.btn.btn-primary.btn-block(type='submit')
                    | Delete User
            .modal-footer
              button.btn.btn-danger.btn-default.pull-left(type='submit', data-dismiss='modal' onclick="window.location='/'")
                span.glyphicon.glyphicon-remove
                |  Cancel
              button.btn.btn-default.pull-right(type='submit', data-dismiss='modal' onclick="window.location='/update'")
                span.glyphicon.glyphicon-arrow-left
                |  Go back
    script.
      $(document).ready(function(){
      $("#myModal").modal();
      });